@charset "UTF-8";
/* ===================================================================
 top
======================================================================*/

@import "../../_partial/var/_all";
@import "../../_partial/function/_all";
/*----------------------------------------------------------
 concept
------------------------------------------------------------*/

.concept
  &__inner
    padding: 0 15px
  &__lead
    margin-top: 40px
    font-size: 16px

@media $mq-pc
  .concept
    &__lead
      width: 680px
      margin: 80px auto 0
      font-size: 20px
      line-height: 2em


/*----------------------------------------------------------
 blog
------------------------------------------------------------*/

.blog
  &__list
    margin-top: 30px
    border-top: 1px solid #e3e8f1
    > li
      background: rgba(255, 255, 255, 0.5)
      border-bottom: 1px solid #e3e8f1
    a
      display: block
      padding: 15px 25px 15px 15px
      text-align: left
      color: #333
      mixin--arrow-right(8px, #039, 15px)
      time
        padding-left: 1px
        font-size: 12px
        font-weight: bold
        font-family: $font_family_brandon


/*----------------------------------------------------------
 gallery
------------------------------------------------------------*/

.gallery
  &__area
    position: relative
    margin-top: 25px

.slick
  &-slide
    img
      width: 90%
      height: auto
      margin: 0 auto
  &-arrow
    position: absolute
    top: 0
    z-index: 2
    width: 10%
    height: 100%
    text-indent: -9999px
    outline: none
    &:after
      content: ""
      position: absolute
      top: 50%
      width: 20px
      height: 20px
      margin-top: -10px
      border-style: solid
      border-color: #fff
      transform: rotate(45deg)
  &-prev
    left: 3px
    &:after
      left: 10px
      border-width: 0 0 2px 2px
  &-next
    right: 3px
    &:after
      right: 10px
      border-width: 2px 2px 0 0


/*----------------------------------------------------------
 profile
------------------------------------------------------------*/

.profile
  &__inner
    padding: 0 15px
  &__image
    width: 190px
    margin: 25px auto 0
    border: 4px solid #ddd
    border-radius: 50%
    img
      width: 100%
      height: auto
  &__lead
    margin-top: 30px
    line-height: 1.8em

  &_detail
    &__btnList
      margin-top: 50px
      > li
        display: inline-block
        width: 65px
        height: 65px
        padding-top: 25px
        background: #b6c8ec
        border-radius: 50%
        box-sizing: border-box
        color: #dbe4f6
        line-height: 1em
        text-align: center
        + li
          margin-left: 40px
        &.active
          background: #6d92da
          color: #fff
    &_contents
      position: relative
      margin-top: 50px
      &__content
        position: absolute;
        top: 0
        left: 0
        width: 100%
      &__list
        > dt
          font-size: 12px
          color: #6d92da
          font-weight: bold
          font-family: $font_family_brandon
        > dd
          small
            font-size: 12px
          + dt
            margin-top: 30px


@media $mq-pc
  .profile
    &__image
      width: 300px
      margin-top: 80px

    &_detail
      &__btnList
        > li
          width: 78px
          height: 78px
          padding-top: 30px
          cursor: pointer
          &:hover
            opacity: 0.8
      &_contents
        &__list
          dt
            font-size: 14px


/*----------------------------------------------------------
 contact
------------------------------------------------------------*/

.contact
  &__inner
    padding: 0 15px
  &__notes
    margin-top: 30px
  &_modal
    &__list
      dt
        font-size: 12px
        color: #6d92da
        font-weight: bold
      dd
        margin-top: 5px
        + dt
          margin-top: 30px
    &__input
      width: 100%
      border-width: 0
      background: transparent
      font-size: 16px
    &__textarea
      width: 100%
      height: 100px
      border-width: 0
      background: transparent
      font-size: 16px
      resize: none
    &__btnOuter
      margin-top: 30px


@media $mq-pc
  .contact
    &__notes
      margin-top: 40px

