/*----------------------------------------------------------
 main
------------------------------------------------------------*/

.section
  padding: 50px 0
  &--bg
    background: #039
    color: #fff

  &_header
    &__title
      position: relative
      padding-bottom: 10px
      font-size: 30px
      color: #039
      line-height: 1em
      font-weight: normal
      font-family: $font_family_brandon
      &:after
        content: ""
        display: block
        position: absolute
        bottom: 0
        left: 50%
        width: 75px
        margin-left: -37px
        border-bottom: 1px solid #8099cc
    &__caption
      margin-top: 10px
      font-family: "Noto Sans Japanese"

  &__btnOuter
    margin-top: 30px

.section--bg .section_header__title
  color: #fff


/* concept
--------------------------------------------------*/

.concept
  &__inner
    padding: 0 15px
  &__lead
    margin-top: 40px
    font-size: 16px


/* blog
--------------------------------------------------*/

.blog
  &__list
    margin-top: 30px
    border-top: 1px solid #e3e8f1
    > li
      background: rgba(255, 255, 255, 0.5)
      border-bottom: 1px solid #e3e8f1
    a
      display: block
      padding: 15px 25px 15px 15px
      text-align: left
      color: #333
      mixin--arrow-right(8px, #039, 15px)
      time
        padding-left: 1px
        font-size: 12px
        font-weight: bold
        font-family: $font_family_brandon


