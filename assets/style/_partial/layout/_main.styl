/* profile
--------------------------------------------------*/

.profile
  &__inner
    padding: 0 15px
  &__lead
    margin-top: 30px
    line-height: 1.8em
  &__image
    width: 190px
    margin: 25px auto 0
    border: 4px solid #ddd
    border-radius: 50%
    img
      width: 100%
      height: auto

  &_detail
    &__btnList
      margin-top: 50px
      > li
        display: inline-block
        width: 65px
        height: 65px
        padding-top: 25px
        background: #b6c8ec
        border-radius: 50%
        box-sizing: border-box
        color: #dbe4f6
        line-height: 1em
        text-align: center
        + li
          margin-left: 40px
        &.active
          background: #6d92da
          color: #fff
    &_content
      margin-top: 50px
      &__list
        > dt
          font-size: 12px
          color: #6d92da
          font-weight: bold
          font-family: $font_family_brandon
        > dd
          small
            font-size: 12px
          + dt
            margin-top: 30px


/* contact
--------------------------------------------------*/

.contact
  &__inner
    padding: 0 15px

.form
  &__list
    margin-top: 50px
    padding: 0 5px
    > li + li
      margin-top: 20px
  &__input
    &--text
      width: 100%
      padding: 3px 15px 5px
      border-width: 0
      box-sizing: border-box
      border-radius: 15px
      font-size: 16px
      text-align: left
  &__textarea
    width: 100%
    min-height: 100px
    padding: 3px 15px 5px
    border-width: 0
    border-radius: 14px
    box-sizing: border-box
    font-size: 16px
    text-align: left

