/*----------------------------------------------------------
 main
------------------------------------------------------------*/

.section
  padding: 50px 0
  &--bg
    background: #039
    color: #fff

  &_header
    &__title
      position: relative
      padding-bottom: 10px
      font-size: 30px
      color: #039
      line-height: 1em
      font-weight: normal
      font-family: $font_family_brandon
      &:after
        content: ""
        display: block
        position: absolute
        bottom: 0
        left: 50%
        width: 75px
        margin-left: -37px
        border-bottom: 1px solid #8099cc
    &__caption
      margin-top: 10px
      font-family: "Noto Sans Japanese"

  &__btnOuter
    margin-top: 30px

.section--bg .section_header__title
  color: #fff


/* concept
--------------------------------------------------*/

.concept
  &__inner
    padding: 0 15px
  &__lead
    margin-top: 40px
    font-size: 16px


/* blog
--------------------------------------------------*/

.blog
  &__list
    margin-top: 30px
    border-top: 1px solid #e3e8f1
    > li
      background: rgba(255, 255, 255, 0.5)
      border-bottom: 1px solid #e3e8f1
    a
      display: block
      padding: 15px 25px 15px 15px
      text-align: left
      color: #333
      mixin--arrow-right(8px, #039, 15px)
      time
        padding-left: 1px
        font-size: 12px
        font-weight: bold
        font-family: $font_family_brandon


/* gallery
--------------------------------------------------*/

.gallery
  &__area
    position: relative
    margin-top: 25px

.slick
  &-slide
    img
      width: 90%
      height: auto
      margin: 0 auto
  &-arrow
    position: absolute
    top: 0
    z-index: 2
    width: 10%
    height: 100%
    text-indent: -9999px
    outline: none
    &:after
      content: ""
      position: absolute
      top: 50%
      width: 20px
      height: 20px
      margin-top: -10px
      border-style: solid
      border-color: #fff
      transform: rotate(45deg)
  &-prev
    left: 3px
    &:after
      left: 10px
      border-width: 0 0 2px 2px
  &-next
    right: 3px
    &:after
      right: 10px
      border-width: 2px 2px 0 0





/* profile
--------------------------------------------------*/

.profile
  &__inner
    padding: 0 15px
  &__lead
    margin-top: 30px
    line-height: 1.8em
  &__image
    width: 190px
    margin: 25px auto 0
    border: 4px solid #ddd
    border-radius: 50%
    img
      width: 100%
      height: auto

  &_detail
    &__btnList
      margin-top: 50px
      > li
        display: inline-block
        width: 65px
        height: 65px
        padding-top: 25px
        background: #b6c8ec
        border-radius: 50%
        box-sizing: border-box
        color: #dbe4f6
        line-height: 1em
        text-align: center
        + li
          margin-left: 40px
        &.active
          background: #6d92da
          color: #fff
    &_contents
      position: relative
      margin-top: 50px
      &__content
        position: absolute;
        top: 0
        left: 0
        width: 100%
      &__list
        > dt
          font-size: 12px
          color: #6d92da
          font-weight: bold
          font-family: $font_family_brandon
        > dd
          small
            font-size: 12px
          + dt
            margin-top: 30px


/* contact
--------------------------------------------------*/

.contact
  &__inner
    padding: 0 15px
  &_modal
    &__list
      dt
        font-size: 12px
        color: #6d92da
        font-weight: bold
      dd
        margin-top: 5px
        + dt
          margin-top: 30px
    &__input
      width: 100%
      border-width: 0
      background: transparent
      font-size: 16px
    &__textarea
      width: 100%
      height: 100px
      border-width: 0
      background: transparent
      font-size: 16px
      resize: none
    &__btnOuter
      margin-top: 30px

.form
  &__list
    margin-top: 50px
    padding: 0 5px
    > li + li
      margin-top: 20px
    .error
      background: #c33
  &__input
    &--text
      width: 100%
      padding: 3px 15px 5px
      border-width: 0
      box-sizing: border-box
      border-radius: 15px
      font-size: 16px
      text-align: left
  &__textarea
    width: 100%
    min-height: 100px
    padding: 3px 15px 5px
    border-width: 0
    border-radius: 14px
    box-sizing: border-box
    font-size: 16px
    text-align: left


/*----------------------------------------------------------
 modal
------------------------------------------------------------*/

.modal
  position: fixed
  display: none
  top: 0
  left: 0
  z-index: 10
  width: 100%
  height: 100vh
  background: rgba(255, 255, 255, 0.95)
  &__btn
    &--close
      position: absolute
      top: 15px
      right: 15px
      width: 30px
      height: 30px
      text-indent: -9999px
      &:after, &:before
        content: ""
        display: block
        position: absolute
        top: 0
        width: 2px
        height: 100%
        background: #6d92da
      &:before
        left: 14px
        transform: rotate(45deg)
      &:after
        right: 14px
        transform: rotate(-45deg)
  &__inner
    max-height: 100%
    padding: 50px 20px
    box-sizing: border-box
    overflow-y: scroll
  &__title
    font-size: 30px
    color: #039
  &__main
    margin-top: 50px
    color: #333

