/*----------------------------------------------------------
 footer
------------------------------------------------------------*/

.footer
  padding: 50px 0
  &__copyright
    margin-top: 30px
    font-size: 12px
    color: #777
    font-family: $font_family_brandon

.social
  margin-top: 30px
  &__list
    > li
      display: inline-block
      margin: 0 5px
  &__icon
    display: block
    width: 40px
    height: 40px
    background: url("/common/img/icon_social.png") no-repeat
    background-size: auto 40px
    text-indent: -9999px
    &--twitter
      background-position: 0 0
    &--facebook
      background-position: -50px 0
    &--line
      background-position: -100px 0
    &--instagram
      background-position: -150px 0
    &--github
      background-position: -200px 0

