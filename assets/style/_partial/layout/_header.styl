/*----------------------------------------------------------
 header
------------------------------------------------------------*/

.header
  position: relative
  height: 100vh
  &__logo
    position: absolute
    top: 40%
    left: 50%
    width: 80%
    height: auto
    margin-left: -40%
  &__attention
    position: absolute
    top: 60%
    left: 50%
    width: 260px
    margin-left: -145px
    padding: 3px 15px 5px
    background: rgba(255, 255, 255, 0.8)
    border: 2px solid #039
    border-radius: 5px
    font-size: 16px
    color: #039
    text-align: center
    font-weight: bold


@media $mq-pc
  .header
    &__logo
      top: auto
      bottom: 130px
      left: 80px
      width: 650px
      margin-left: 0
    &__attention
      top: 35%
      margin-left: -130px


/*----------------------------------------------------------
 globalNav
------------------------------------------------------------*/

.globalNav
  position: fixed
  top: 0
  left: 0
  z-index: 3
  width: 100%
  &__header
    position: relative
    background: rgba(255, 255, 255, 0.1)
    padding: 6px 10px 5px
  &__btnHome
    display: block
    width: 70px
    height: 33px
    background: url("/common/img/logo_simple.svg") no-repeat 0 50%
    background-size: 70px auto
    text-indent: -9999px
  &__btnToggle
    position: absolute
    top: 12px
    right: 10px
    width: 26px
    height: 22px
    border-top: 2px solid #ddd
    box-sizing: border-box
    &:before, &:after
      content: ""
      display: block
      position: absolute
      left: 0
      width: 100%
      height: 2px
      background: #ddd
    &:before
      top: 8px
    &:after
      bottom: 0
  &__inner
    padding: 0
  &__list
    display: none
    background: #002879
    > li
      border-top: 1px solid #18449b
      &:first-child
        border-top-width: 0
      &.current
        text-shadow: 0 0 3px #fff
    a
      display: block
      padding: 17px 15px
      font-size: 16px
      color: #fff
      text-align: left
      text-decoration: none

  &.active
    height: 100vh
    background: rgba(0, 0, 0, 0.7)
    .globalNav
      &__header
        background-color: #111
      &__btnToggle
        border-top-width: 0
        &:before, &:after
          top: 10px
          left: 0
          height: 1px
        &:before
          transform: rotate(45deg)
        &:after
          transform: rotate(-45deg)


@media $mq-pc
  .globalNav
    position: absolute
    background: #111
    &__header
      display: none
    &__list
      display: block
      background: transparent
      overflow: hidden
      > li
        float: left
        width: 20%
        border-top-width: 0
      a
        padding: 20px 0
        color: #cbd0e4
        text-align: center
        &:hover
          color: #fff
        &.active
          color: #fff
          text-shadow: 0 0 3px #fff

