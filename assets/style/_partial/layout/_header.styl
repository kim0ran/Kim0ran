/*----------------------------------------------------------
 header
------------------------------------------------------------*/

.header
  position: relative
  height: 100vh
  &__logo
    position: absolute
    top: 40%
    left: 50%
    width: 80%
    height: auto
    margin-left: -40%

.globalNav
  position: fixed
  top: 0
  left: 0
  z-index: 2
  width: 100%
  &__header
    position: relative
    height: 33px
    background: rgba(255, 255, 255, 0.1) url("/common/img/logo_simple.svg") no-repeat 10px 50%
    background-size: 70px auto
    padding: 6px 10px 5px
  &__btnToggle
    position: absolute
    top: 12px
    right: 10px
    width: 26px
    height: 22px
    border-top: 2px solid #ddd
    box-sizing: border-box
    &:before, &:after
      content: ""
      display: block
      position: absolute
      left: 0
      width: 100%
      height: 2px
      background: #ddd
    &:before
      top: 8px
    &:after
      bottom: 0
  &__inner
    padding: 0
  &__list
    display: none
    background: #002879
    > li
      border-top: 1px solid #18449b
      &:first-child
        border-top-width: 0
    a
      display: block
      padding: 17px 15px
      font-size: 16px
      color: #fff
      text-align: left
      text-decoration: none

  &.active
    height: 100vh
    background: rgba(0, 0, 0, 0.7)
    .globalNav
      &__header
        background-color: #111
      &__btnToggle
        border-top-width: 0
        &:before, &:after
          top: 10px
          left: 0
          height: 1px
        &:before
          transform: rotate(45deg)
        &:after
          transform: rotate(-45deg)













