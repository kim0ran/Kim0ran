    <section class="section section--bg contact" id="ContactView">
      <div class="contact__inner inner">
        <header class="section_header">
          <h2 class="section_header__title">CONTACT</h2>
          <p class="section_header__caption">ご意見やご感想、その他お問い合わせにつきましては以下のフォームにてお願い致します</p>
        </header>
        <p class="contact__notes"></p>
        <div class="form">
          <ul class="form__list">
            <li><input type="text" id="" name="name" placeholder="お名前" value="" class="form__input--text"></li>
            <li><input type="text" id="" name="mail" placeholder="メールアドレス" value="" class="form__input--text"></li>
            <li><textarea id="" name="message" placeholder="お問い合わせ内容" class="form__textarea"></textarea></li>
          </ul>
          <div class="section__btnOuter">
            <button type="button" class="btn-action js-contactBtnConfirm">内容を確認する</button>
          </div>
        </div>
      </div>
      <div class="modal contact_modal js-contactModal">
        <div class="modal__btn--close js-modalBtnClose">閉じる</div>
        <div class="modal__inner">
          <p class="modal__title">お問い合わせ内容</p>
          <div class="modal__main">
            <form>
              <input type="hidden" id="" name="name" value="">
              <input type="hidden" id="" name="mail" value="">
              <input type="hidden" id="" name="message" value="">
              <dl class="contact_modal__list">
                <dt>お名前</dt>
                <dd data-name="name">あああ　あああ</dd>
                <dt>メールアドレス</dt>
                <dd data-name="mail">aaa@bbb.ccc</dd>
                <dt>お問い合わせ内容</dt>
                <dd data-name="message">あいうえおかきくけこあいうえおかきくけこあいうえおかきくけこあいうえおかきくけこあいうえおかきくけこあいうえおかきくけこ</dd>
              </dl>
              <div class="contact_modal__btnOuter">
                <button type="button" class="btn-action js-modalBtnClose">内容を送信する</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

